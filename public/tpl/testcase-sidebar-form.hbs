<div class="row">
    <div class="col-lg-12 form-horizontal">
        <div class="form-group">
            <label class="control-label col-lg-2">Title</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="testcase-title" name="testCase[title]" placeholder="My test case" value="{{title}}">
            </div>
        </div>
    </div>
    <div class="col-lg-12 form-horizontal">
        <div class="form-group">
            <label class="control-label col-lg-2">Slug</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="testcase-slug" name="testCase[slug]" placeholder="auto-generated-uri" value="{{slug}}">
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="form-group">
            <label class="control-label">Description</label>
            <textarea class="form-control" rows="4" id="testcase-description" name="testCase[description]" placeholder="About the test case. This information is visible to other users and search engines.">{{description}}</textarea>
        </div>
    </div>
    <div class="col-lg-12" style="display:none;">
        <div class="form-group">
            <label class="control-label">Status</label><br>
            <label class="radio-inline">
                <input type="radio" id="testcase-status-public" name="testCase[status]" value="public" {{#if_eq status "public"}}checked{{/if_eq}}> Public
            </label>
            <label class="radio-inline">
                <input type="radio" id="testcase-status-private" name="testCase[status]" value="private" {{#if_eq status "private"}}checked{{/if_eq}}> Private
            </label>
        </div>
    </div>
</div>
<div class="row">
    <div class="form-group col-lg-4">
        <button type="submit" class="btn btn-info" id="new-testcase-button"><a href="/">New</a></button>
    </div>
    <div class="form-group col-lg-8">
        <div style="float:right;">
            <button type="submit" class="btn btn-success" id="save-testcase-button"><span class="btn-icon"></span>Save</button>
            <button type="submit" class="btn btn-primary" id="run-testcase-button"><span class="btn-icon"></span>Run</button>
        </div>
    </div>
</div>