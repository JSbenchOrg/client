    <div class="col-lg-5 form-horizontal">
        <div class="form-group">
            <div class="col-lg-2">
                <label class="control-label">Title:</label>
            </div>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="testcase-title" name="testCase[title]" placeholder="My test case" value="{{title}}">
            </div>
        </div>
    </div>
    <div class="col-lg-5 form-horizontal">
        <div class="form-group">
            <div class="col-lg-2">
                <label class="control-label">Slug:</label>
            </div>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="testcase-slug" name="testCase[slug]" placeholder="auto-generated-uri" value="{{slug}}">
            </div>
        </div>
    </div>

