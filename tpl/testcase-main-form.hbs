    <div class="col-lg-2">
        <div class="form-group" style="text-align:right;">
            <button type="submit" class="btn btn-primary" id="save-testcase-button"><span class="btn-icon"></span>Save</button>
        </div>
    </div>
</div>

<div class="row row-harness">
    <div class="col-lg-12">
        <div class="panel panel-default panel-harness">
            <div class="panel-heading">Setup <code></code></div>
            <div class="panel-body">
                <!--
                <div class="form-group">
                    <textarea id="testcase-htmlcode" class="form-control lang-html" rows="4" name="testCase[harness][html]" placeholder="HTML setup code ...">{{harness.html}}</textarea>
                </div>
                -->
                <div class="form-group">
                    <textarea id="testcase-setup" class="form-control lang-javascript" rows="4" name="testCase[harness][setUp]" placeholder="Setup JS code ...">{{harness.setUp}}</textarea>
                </div>
                <div class="form-group">
                    <textarea id="testcase-teardown" class="form-control lang-javascript" rows="4" name="testCase[harness][tearDown]" placeholder="Tear down JS code ...">{{harness.tearDown}}</textarea>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Suite tests</div>

            <div class="panel-body">
                <div class="col-lg-12" id="entries">
                    {{#each entries}}
                        {{> entry}}
                    {{/each}}
                </div>
                <div class="col-lg-12">
                    <a href="javascript:void(0);" style="float:right;" id="add-test-link">&#9735; Add code snippet</a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-lg-offset-10">
        <div class="form-group" style="text-align:right;">
                <button type="submit" class="btn btn-success" id="run-testcase-button"><span class="btn-icon"></span>Run</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default panel-info">
            <div class="panel-heading">Results</div>
            <div class="panel-body" id="results">
                <i>Will appear here ...</i>
            </div>
        </div>
        <div id="chart-results"></div>
    </div>
</div>